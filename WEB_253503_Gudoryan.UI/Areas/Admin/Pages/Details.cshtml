@page "{id:int}"
@model WEB_253503_Gudoryan.UI.Areas.Admin.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Price) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Price) $
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.ImagePath)
        </dt>
        <dd class="col-sm-10">
             <img src="@Url.Content(Model.Game.ImagePath)" alt="Image" style="width: 150px; height: 200px;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Game.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
