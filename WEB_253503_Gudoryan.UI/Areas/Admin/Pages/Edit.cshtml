@page
@model WEB_253503_Gudoryan.UI.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.Id" />
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Description" class="control-label"></label>
                <input asp-for="Game.Description" class="form-control" />
                <span asp-validation-for="Game.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Price" class="control-label"></label>
                <input asp-for="Game.Price" class="form-control" />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
            <div class="for-group">
                <label asp-for="Category" class="control-label"></label>
                <select class="form-select" asp-for="Category" aria-label="Default select example">
                    @foreach (var category in Model.Categories)
                    {
                        if (category.Id == Model.Game.Category.Id)
                        {
                            <option value="@category.Id" selected>@category.Name</option>
                        } else
                        {
                            <option value="@category.Id">@category.Name</option>                   
                        }
                    }
                </select>
            </div>
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.Game.ImagePath)" alt="Image" style="width: 150px; height: 200px;" />
            </dd>
            <div class="from-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input type="file" class="form-control" asp-for="ImagePath">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

